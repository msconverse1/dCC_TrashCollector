@model MSC_TrashCollector.Models.ViewModel

@{
    ViewBag.Title = "PickupDays";
}

<h2>PickupDays</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>SuspendedDay</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SuspendedDay.PickUPDay, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SuspendedDay.PickUPDay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SuspendedDay.PickUPDay, "", new { @class = "text-danger" })
        </div>
    </div>
    @{ Model.Customer.SuspendedDayId = Model.SuspendedDay.ID;}
    @Html.HiddenFor(model => model.Customer.ID)
    @Html.HiddenFor(model => model.Customer.FirstName)
    @Html.HiddenFor(model => model.Customer.LastName)
    @Html.HiddenFor(model => model.Customer.Email)
    @Html.HiddenFor(model => model.Customer.AddressID)
    @Html.HiddenFor(model => model.Customer.Address)
    //@Html.HiddenFor(model => model.Customer.ANUserID)

    @Html.HiddenFor(model => model.Address.ID)
    @Html.HiddenFor(model => model.Address.StreetName)
    @Html.HiddenFor(model => model.Address.City)
    @Html.HiddenFor(model => model.Address.State)
    @Html.HiddenFor(model => model.Address.ZipCode)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
